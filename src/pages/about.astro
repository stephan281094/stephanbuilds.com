---
import { getEntry } from "astro:content";
import SeedlingIcon from "../components/seedling-icon.astro";
import Root from "../layouts/root.astro";

export const prerender = true;

const about = await getEntry("pages", "about")!;
const { Content } = await about.render();
---

<Root title="About">
  <main
    class="mx-auto flex w-full max-w-[65ch] flex-col gap-8 py-6 leading-normal md:py-12"
  >
    <div class="flex flex-col gap-8 px-6">
      <h1 class="text-2xl/normal font-medium md:text-3xl/normal">About</h1>
      <div class="prose dark:prose-invert">
        <Content />
      </div>
      <SeedlingIcon />
    </div>
  </main>
</Root>
