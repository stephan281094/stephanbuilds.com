---
import { Image } from "astro:assets";
const { description, imageUrl, imageAlt = "", href, title } = Astro.props;
---

<a
  class="hover:bg-foreground/10 grid grid-cols-4 gap-4 rounded-lg p-4 md:grid-cols-3 md:gap-8"
  href={href}
  data-astro-prefetch
>
  <Image
    class="aspect-square rounded-sm object-cover md:aspect-video"
    src={imageUrl}
    width="500"
    height="300"
    alt={imageAlt}
    layout="full-width"
  />
  <div
    class="col-span-3 flex flex-col justify-center gap-2 md:col-span-2 md:gap-4"
  >
    <span class="text-xl">{title}</span>
    <p
      class="line-clamp-2 text-sm text-gray-600 md:text-base dark:text-gray-400"
    >
      {description}
    </p>
  </div>
</a>
