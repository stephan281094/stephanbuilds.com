---
import { SITE_TITLE } from "../consts";
const pathname = new URL(Astro.request.url).pathname;
const [page] = pathname.split("/").filter(Boolean);
---

<header
  class="container mx-auto flex items-center gap-6 px-6 md:gap-12 md:px-12"
>
  <a
    class="-mx-2 mr-auto rounded-sm px-2 py-1 whitespace-nowrap"
    href="/"
    data-astro-prefetch="viewport">{SITE_TITLE}</a
  >
  <a
    class:list={[
      "-mx-2 rounded-sm px-2 py-1 text-stone-600 hover:text-black dark:text-stone-300 dark:hover:text-white",
      "data-[active=true]:bg-foreground/10 data-[active=true]:text-black dark:data-[active=true]:text-white",
    ]}
    data-active={page === "projects"}
    href="/projects"
    data-astro-prefetch="viewport">Projects</a
  >
  <a
    class:list={[
      "-mx-2 rounded-sm px-2 py-1 text-stone-600 hover:text-black dark:text-stone-300 dark:hover:text-white",
      "data-[active=true]:bg-foreground/10 data-[active=true]:text-black dark:data-[active=true]:text-white",
    ]}
    data-active={page === "about"}
    href="/about"
    data-astro-prefetch="viewport">About</a
  >
</header>
